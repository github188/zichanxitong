<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.szcomtop.meal.views.HeadView
        android:id="@+id/approve_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.szcomtop.meal.views.HeadView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="#fbfbfb"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/approve_my_applys"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            android:layout_weight="1">
            <TextView

                android:id="@+id/approve_my_applys_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2b9af7"
                android:text="我申请的"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:paddingBottom="9dp"
            android:background="#dfdfdf"
            android:paddingTop="9dp"/>

        <LinearLayout
            android:id="@+id/approve_wait_to_approved"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"


            android:layout_weight="1">
            <TextView

                android:id="@+id/approve_wait_to_approved_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="待我审批"/>

        </LinearLayout>

    </LinearLayout>
        <TextView
            android:id="@+id/approve_wait_to_approved_red_dot"

            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="2"
            android:background="@drawable/red_round"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf"/>


    <com.szcomtop.meal.views.MyViewPager
        android:id="@+id/approve_viewpager"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.szcomtop.meal.views.MyViewPager>

</LinearLayout>