<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <com.szcomtop.meal.views.HeadView
        android:id="@+id/apply_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingTop="14dp">

                <com.szcomtop.meal.views.CircleImageView
                    android:id="@+id/apply_detail_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/blank_avatar" />

                <TextView

                    android:id="@+id/apply_detail_applicant_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/apply_detail_avatar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/apply_detail_avatar"
                    android:layout_toRightOf="@+id/apply_detail_avatar"
                    android:text="张三"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/apply_detail_avatar"
                    android:layout_toEndOf="@+id/apply_detail_avatar"
                    android:layout_toRightOf="@+id/apply_detail_avatar"
                    android:gravity="center_vertical">

                    <TextView

                        android:id="@+id/apply_detail_apply_status_tv"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="[审核中]"
                        android:textColor="#ff6009"
                        android:textSize="16sp"

                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/ic_launcher"
                        android:id="@+id/apply_detail_apply_status_iv" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="17dp"
                android:background="#d9d9d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在部门："

                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_applicant_department"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信息处"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用餐人员："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_apply_people"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王五、招商、算法"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用餐人数："
                    android:textColor="#999999"

                    android:textSize="16sp" />

                <TextView

                    android:id="@+id/apply_detail_apply_number"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3人"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用餐食堂："

                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_eat_canteen"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市局第一食堂"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停餐食堂："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_stop_canteen"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市局第二食堂"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_start_time"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-03-01"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_stop_time"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-03-01"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚餐时间："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_dinner_time"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:ellipsize="end"

                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跨区用餐天数："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_eat_days"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1天"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跨区用餐事由："
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/apply_detail_reson"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="珠海局信息处王府主任带队参观学习"
                    android:textColor="#000000"

                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/apply_detail_status_list"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f1f5f7"

                android:paddingBottom="15dp"
                android:orientation="vertical">

                <include layout="@layout/app_detail_status_list_item"/>

                <include layout="@layout/app_detail_status_list_item"/>

                <include layout="@layout/app_detail_status_list_item"/>

                <include layout="@layout/app_detail_status_list_item"/>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>