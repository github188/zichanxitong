<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="#ffffff"
    android:paddingTop="20dp">

    <com.szcomtop.meal.views.CircleImageView
        android:id="@+id/apply_item_avatar"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/blank_avatar"
         />

    <TextView
        android:id="@+id/apply_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三的跨区用餐申请"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_alignTop="@id/apply_item_avatar"
        android:layout_toRightOf="@id/apply_item_avatar"
        android:layout_toEndOf="@id/apply_item_avatar"
         />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/apply_item_avatar"
        android:layout_toRightOf="@id/apply_item_avatar"
        android:layout_toEndOf="@id/apply_item_avatar"
        android:gravity="center_vertical">



    <TextView
        android:id="@+id/apply_item_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[审核中]"
        android:textColor="#ff6009"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/apply_item_state_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="6dp"
/>
    </LinearLayout>

    <TextView
        android:id="@+id/apply_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-11-12 17:30"
        android:textSize="14sp"
        android:textColor="#b3b3b3"
        android:layout_alignTop="@id/apply_item_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>