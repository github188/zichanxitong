<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="#bbbbbb" />

                <ImageView
                    android:id="@+id/status_list_item_left_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_launcher" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/timer_list_bg"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.szcomtop.meal.views.CircleImageView
                            android:id="@+id/status_list_item_avatar"
                            android:layout_width="49dp"
                            android:layout_height="49dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/blank_avatar" />

                        <TextView
                            android:id="@+id/status_list_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/status_list_item_avatar"
                            android:layout_marginLeft="10dp"
                            android:layout_toEndOf="@+id/status_list_item_avatar"
                            android:layout_toRightOf="@+id/status_list_item_avatar"
                            android:text="张三"
                            android:textColor="#000000"
                            android:textSize="17sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/status_list_item_avatar"
                            android:layout_toEndOf="@+id/status_list_item_avatar"
                            android:layout_toRightOf="@+id/status_list_item_avatar"
                            android:gravity="center_vertical">


                            <TextView
                                android:id="@+id/status_list_item_status_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="[审核中]"
                                android:textColor="#ff6009"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/status_list_item_status_iv"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginLeft="6dp"
                                android:src="@drawable/ic_launcher" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/status_list_item_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/status_list_item_name"
                            android:layout_marginRight="10dp"
                            android:text="2015-11-12 17:30"
                            android:textColor="#b3b3b3"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/status_list_item_status_reason_divide"

                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="70dp"
                        android:layout_height="1px"
                        android:background="@color/line"
                        android:visibility="gone"

                        />

                    <TextView

                        android:id="@+id/status_list_item_status_reason"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="70dp"

                        android:visibility="gone"
                        android:text="agsgag"/>


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>