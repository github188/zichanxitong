        android:gravity="center"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@color/blue"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>