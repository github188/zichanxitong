<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/charge_tab_indicator_tv_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="设备名称"

        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/carbon_selector_tabtext"
        android:background="@drawable/carbon_selector_tab_bg"
        />


    <TextView
        android:id="@+id/charge_tab_indicator_tv_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:text="设备类型"
        android:gravity="center"
        android:textColor="@color/carbon_selector_tabtext"
        android:background="@drawable/carbon_selector_tab_bg"
        />

    <TextView
        android:id="@+id/charge_tab_indicator_tv_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:text="设备位置"
        android:gravity="center"
        android:textColor="@color/carbon_selector_tabtext"
        android:background="@drawable/carbon_selector_tab_bg"
        />




</LinearLayout>