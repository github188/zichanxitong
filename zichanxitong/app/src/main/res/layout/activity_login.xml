<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charge_login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="16dp"
            android:text="XXX资产管理系统"
            android:textColor="#666666"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/server"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/ui_edit_bg"
            android:drawableLeft="@drawable/c_login_server"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:hint="服务器"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ui_edit_bg"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/c_login_user_icon"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:hint="账号"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColorHint="#b3b3b3"
                android:textSize="14sp" />



            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ffb5b8b9" />

            <ImageView
                android:id="@+id/ui_change_user_name"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerInside"
                android:src="@drawable/c_downward_icon" />
        </LinearLayout>


        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/ui_edit_bg"
            android:drawableLeft="@drawable/c_login_password_icon"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:hint="密码"
            android:inputType="textPassword"

            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/commit_btn_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />



    </LinearLayout>
</RelativeLayout>