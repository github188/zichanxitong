<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ui_white_bg"
    >

    <com.szcomtop.meal.views.HeadView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.szcomtop.meal.views.HeadView>

    <LinearLayout
        android:id="@+id/pandian_num_area"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/white"
        android:visibility="gone"
        >

        <TextView

            android:id="@+id/pandian_num_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘点号："
            android:textColor="#000000"
            android:textSize="13sp"/>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ui_edit_bg"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/pandian_num_et"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="13sp"

                />

            <ImageView
                android:layout_width="1px"
                android:layout_height="34dp"
                android:background="#ffb5b8b9"/>

            <ImageView

                android:id="@+id/pandian_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"

                android:src="@drawable/c_downward_icon"/>

        </LinearLayout>


        <ImageView

            android:id="@+id/pandian_refresh"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"

            android:src="@drawable/refresh_icon"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ui_edit_line"/>

    <TextView

        android:id="@+id/common_operate_borrower_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bottom_double_line_bg"
        android:clickable="true"
        android:drawableRight="@drawable/ui_submenu"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="领用人:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="gone"
        />


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/option_borrow_type_area">

        <TextView

            android:id="@+id/option_borrow_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调拨类型："
            android:textColor="#000000"
            android:textSize="13sp"/>



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ui_edit_bg"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView


                android:id="@+id/option_borrow_type_et"

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="13sp"

                />

            <ImageView
                android:layout_width="1px"
                android:layout_height="34dp"
                android:background="#ffb5b8b9"/>

            <ImageView

                android:id="@+id/option_borrow_type_arrow"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"

                android:src="@drawable/c_downward_icon"/>

        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ui_edit_line"/>


    <TextView

        android:id="@+id/option_zc_tv"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:clickable="true"
        android:drawableRight="@drawable/ui_submenu"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="资产:  共12条数据"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="visible"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ui_edit_line"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/option_listview"
        android:visibility="gone"
        >

    </ListView>





</LinearLayout>