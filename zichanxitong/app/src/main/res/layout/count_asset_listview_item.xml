<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"

    android:orientation="horizontal" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:id="@+id/count_list_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="标签RFID:" />

    <TextView
        android:id="@+id/count_list_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="设备类型:" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"

            >

            <TextView
                android:id="@+id/count_list_item_name"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备名称:" />

            <TextView

                android:id="@+id/count_list_item_error"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="#ff6258"
                android:text="失败"
                android:visibility="gone"
                />

        </LinearLayout>



    </LinearLayout>



    </RelativeLayout>


    <ImageButton
        android:id="@+id/ist_group_item_iv"

        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"


        android:background="@drawable/list_cheakbox_bg"
        />

</LinearLayout>