<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szcomtop.meal.activity.FindActivity">

    <RelativeLayout
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:background="@color/title_bg_color"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/search_back"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/back"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"/>

        <EditText
            android:hint="请输入查找的资产名"
            android:layout_marginRight="10dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/search_icon"
            android:drawablePadding="10dp"
            android:background="@drawable/white_circle_shadow_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/search_back"
            android:layout_toLeftOf="@+id/search_btn"
            android:layout_centerVertical="true"
            android:id="@+id/search_processing"/>

        <ImageView
            android:id="@+id/search_cancel"
            android:layout_alignRight="@+id/search_processing"
            android:src="@mipmap/search_delete"
            android:layout_marginRight="3dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/search_btn"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:text="搜索"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_circle_shadow_button"
            android:textColor="@color/title_bg_color"
            android:layout_height="35dp"/>
    </RelativeLayout>
    <ExpandableListView
        android:layout_below="@+id/search_title"
        android:id="@+id/list_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ExpandableListView>
</RelativeLayout>
